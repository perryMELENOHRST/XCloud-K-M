{
  "manifest_version": 3,
  "name": "XKeeb",
  "description": "A browser extension to allow for keyboard and mouse use in XBOX cloud gaming.",
  "version": "0",
  "permissions": ["scripting", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": ["./scripts/Injectable.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./scripts/contetScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup/interface.html"
  }
}
